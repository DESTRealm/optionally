<?xml version="1.0" encoding="UTF-8"?>

<project name="optionally" default="phar-package">

  <target name="phar-package" description="Build Optionally as a .phar.">
    <pharpackage
      destfile="./optionally.phar"
      basedir="."
      alias="Optionally"
      stub="phar-stub.php"
      signature="md5">
      <fileset dir=".">
        <include name="src/**/*.php" />
        <include name="vendor/symfony/class-loader/Symfony/Component/ClassLoader/UniversalClassLoader.php" />
      </fileset>
      <metadata>
        <element name="author" value="Benjamin A. Shelton" />
      </metadata>
    </pharpackage>
  </target>

</project>